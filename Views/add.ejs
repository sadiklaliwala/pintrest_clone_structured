<%- include ('partials/header') %>
<% if (err) { %>
<p class="error"><%= err %></p>
<% } %>

<div class="w-full min-h-screen bg-zinc-800 px-10 py-5 text-white">
    <h1 class="text-xl">Create a new post.</h1>
    <hr class="opacity-10 mt-3">
    <form action="/uploadpost" method="POST" enctype="multipart/form-data">
        <input class=" block w-1/3 px-3 py-2 border-none " type="file" name="postimage" required>
        <input class="text-black block w-1/3 px-3 py-2 border-2 rounded-md mt-2" type="text" placeholder="Title"
            name="title" required>
        <textarea class=" text-black block w-1/3 px-3 py-2 border-2 rounded-md h-60 mt-2" type="text"
            placeholder="Description" name="description"></textarea>
        <input class="block w-1/3 px-3 py-2  rounded-md bg-red-500 mt-2" type="submit">
    </form>
</div>
<%- include ('partials/footer') %>